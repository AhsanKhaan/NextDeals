{
  "name": "Next Affiliate Project",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--no-deprecation'    next dev && payload dev",
    "build": "cross-env NODE_OPTIONS='--no-deprecation --max-old-space-size=8000' next build && payload build",
    "start": "cross-env NODE_ENV=production next start",
    "lint": "next lint",
    "payload": "cross-env NODE_OPTIONS='--no-deprecation' payload dev",
    "generate:types": "cross-env NODE_OPTIONS='--no-deprecation' payload generate:types",
    "docker:build": "docker build -t dealscope-payload .",
    "docker:run": "docker-compose up -d",
    "seed": "node scripts/direct-mongodb-seed.js",
    "seed:payload": "tsx scripts/seed-payload-mongodb.js",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS='--no-deprecation --no-experimental-strip-types' pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "graphql": "^16.8.1",
    "@aws-sdk/client-sts": "^3.859.0",
    "@aws-sdk/credential-provider-ini": "^3.859.0",
    "@aws-sdk/credential-provider-sso": "^3.859.0",
    "@aws-sdk/credential-providers": "^3.859.0",
    "@aws-sdk/token-providers": "^3.859.0",
    "@hookform/resolvers": "3.9.1",
    "@payloadcms/db-mongodb": "3.49.0",
    "@payloadcms/next": "3.49.0",
    "@payloadcms/next-payload": "^0.1.11",
    "@payloadcms/payload-cloud": "3.49.0",
    "@payloadcms/plugin-cloud-storage": "3.49.0",
    "@payloadcms/richtext-lexical": "3.49.0",
    "@payloadcms/richtext-slate": "3.49.0",
    "@payloadcms/ui": "3.49.0",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.0.2",
    "@swc/core": "^1.13.3",
    "aws4": "^1.13.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "dotenv": "16.4.7",
    "embla-carousel-react": "8.5.1",
    "express": "^5.1.0",
    "framer-motion": "10.16.16",
    "input-otp": "1.4.1",
    "lottie-react": "2.4.0",
    "lucide-react": "0.294.0",
    "mongodb": "6.3.0",
    "mongoose": "8.16.5",
    "mongoose-paginate-v2": "1.9.1",
    "next": "^15.4.5",
    "next-themes": "0.2.1",
    "payload": "3.49.0",
    "react": "19.1.0",
    "react-countup": "6.5.0",
    "react-day-picker": "9.8.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.54.1",
    "react-intersection-observer": "9.5.3",
    "react-parallax-tilt": "1.7.156",
    "react-resizable-panels": "2.1.7",
    "recharts": "2.15.0",
    "sharp": "0.34.2",
    "sonner": "1.7.1",
    "tailwind-merge": "2.0.0",
    "tailwindcss-animate": "1.0.7",
    "vaul": "latest",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "1.50.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.5.4",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "10.4.20",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.3.0",
    "jsdom": "26.1.0",
    "playwright": "1.50.0",
    "playwright-core": "1.50.0",
    "postcss": "8.5.0",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.4.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3",
    "tsx": "^4.16.2"
  },
  "resolutions": {
    "esbuild": "0.25.0",
    "on-headers": "1.1.0",
    "compression": "1.8.1"
  },
  "overrides": {
    "esbuild": "0.25.0",
    "on-headers": "1.1.0"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
